<config>
    <modules>
        <Ziny_BuscaAutoCompletar>
            <version>1.0.0</version>
        </Ziny_BuscaAutoCompletar>
    </modules>
    <frontend>
        <routers>
            <buscaautocompletar>
                <use>standard</use>
                <args>
                    <module>Ziny_BuscaAutoCompletar</module>
                    <frontName>buscaautocompletar</frontName>
                </args>
            </buscaautocompletar>
        </routers>
        <layout>
            <updates>
                <buscaautocompletar>
                    <file>ziny/buscaautocompletar.xml</file>
                </buscaautocompletar>
            </updates>
        </layout>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <Ziny_BuscaAutoCompletar>
                            <title>Search Auto Suggest</title>
                            <sort_order>10</sort_order>
                        </Ziny_BuscaAutoCompletar>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <buscaautocompletar translate="title" module="buscaautocompletar">
                                            <title>Search Auto Suggest</title>
                                            <sort_order>100</sort_order>
                                        </buscaautocompletar>			
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <layout>
            <updates>
                <buscaautocompletar>
                    <file>buscaautocompletar.xml</file>
                </buscaautocompletar>
            </updates>
        </layout>
        <translate>
            <modules>
                <Ziny_BuscaAutoCompletar>
                    <files>
                        <default>Ziny_BuscaAutoCompletar.csv</default>
                    </files>
                </Ziny_BuscaAutoCompletar>
            </modules>
        </translate>
    </adminhtml>   
    <global>
        <models>
            <buscaautocompletar>
                <class>Ziny_BuscaAutoCompletar_Model</class>
                <resourceModel>buscaautocompletar_mysql4</resourceModel>
            </buscaautocompletar>
        </models>
        <blocks>
            <buscaautocompletar>
                <class>Ziny_BuscaAutoCompletar_Block</class>
            </buscaautocompletar>
        </blocks>
        <helpers>
            <buscaautocompletar>
                <class>Ziny_BuscaAutoCompletar_Helper</class>
            </buscaautocompletar>
        </helpers>
    </global>
    <default>
        <buscaautocompletar>
            <definicoes>
                <borda_cor>#ccc</borda_cor>
                <borda_largura>1</borda_largura>
                <hover_fundo>#fff</hover_fundo>
            </definicoes>
            <sugestao>
                <ativo>1</ativo>
                <sugestao_cor>#fff</sugestao_cor>
                <background>#f05</background>
                <total_cor>#ff0</total_cor>
            </sugestao>
            <categoria>
                <ativa>1</ativa>
                <number_category>4</number_category>
                <esconde_categoria>Default Store</esconde_categoria>
                <background>#fff</background>                
                <background_hover>#eee</background_hover>
                <titulo_cor>#333</titulo_cor>
                <total_cor>#fff</total_cor>
            </categoria>
            <resultado>
                <ativo>1</ativo>
                <qtd_produtos>5</qtd_produtos>
                <exibir_imagem>1</exibir_imagem>
                <exibir_nome>1</exibir_nome>
                <exibir_descricao>1</exibir_descricao>
                <qtd_descricao>100</qtd_descricao>
                <descricao_cor>#777</descricao_cor>
                <background>#fff</background>
                <titulo_cor>#555</titulo_cor>
                <imagem_largura>50</imagem_largura>
                <imagem_altura>50</imagem_altura>
                <imagem_borda_largura>1</imagem_borda_largura>
                <imagem_borda_cor>#ddd</imagem_borda_cor>
            </resultado>
        </buscaautocompletar>
    </default>
</config>
